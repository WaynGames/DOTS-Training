{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [ "*" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml" ]
      },
      {
        "files": [ "articles/**.md", "toc.yml", "*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "styles/**" ]
      }
    ],
    "overwrite": [
      {
        "files": [ "apidocs/**.md" ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "API Documentation",
      "_disableContribution": true
    },
    "template": [ "default" ]
  }
}
