{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [ "**/*.cs" ]
        }
      ],
      "dest": "api",
      "allowCompilationErrors": true
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "'${{ fromJson(env.package).displayName }}' | '${{ fromJson(env.package).version }}'",
      "_appFooter": "",
      "_enableSearch": true,
      "_enableNewTab": false,
      "_disableNewTab": true,
      "_disableContribution": true,
      "_disableNextArticle": true
    },
    "fileMetadata": {
      "_disableContribution": { "manual/**/*.md": false }
    },
    "globalMetadataFiles": [
    ],
    "content": [
      { "files": [ "index.md", "toc.yml" ] },
      {
        "src": "license",
        "files": [ "*.md" ],
        "dest": "license"
      },
      {
        "src": "changelog",
        "files": [ "*.md" ],
        "dest": "changelog"
      },
      {
        "src": "api",
        "files": [ "*.yml", "index.md" ],
        "dest": "api"
      },
      {
        "src": "manual",
        "files": [ "**/*.md" ],
        "dest": "manual"
      }
    ],
    "resource": [ { "files": [ "manual/images/*" ] } ],
    "overwrite": [
      {
        "files": [ "apidocs/**.md" ]
      }
    ],
    "sitemap": { "baseUrl": "'$url'" },
    "xref": [ "'$url'" ],
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "dest": "../_site",
    "template": [ "default", "modern" ]
  }
}
